nextflow_process {
    name "Test Process VCFPGLOADER"
    script "../main.nf"
    process "VCFPGLOADER"

    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "vcfpgloader"
    tag "database"

    test("homo_sapiens - vcf.gz - stub") {
        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id: 'test_sample', family: 'TEST_FAM' ],
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/vcf/test.vcf.gz', checkIfExists: true),
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/vcf/test.vcf.gz.tbi', checkIfExists: true)
                ]
                input[1] = 'localhost'
                input[2] = 5432
                input[3] = 'testdb'
                input[4] = 'postgres'
                input[5] = 'public'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.report.get(0).get(1).exists() },
                { assert process.out.log.get(0).get(1).exists() },
                { assert snapshot(process.out.versions).match() }
            )
        }
    }

    test("sarscov2 - vcf.gz - stub") {
        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id: 'test_sarscov2' ],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/vcf/test.vcf.gz', checkIfExists: true),
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/vcf/test.vcf.gz.tbi', checkIfExists: true)
                ]
                input[1] = 'localhost'
                input[2] = 5432
                input[3] = 'testdb'
                input[4] = 'postgres'
                input[5] = 'public'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.report.get(0).get(1).exists() },
                { assert snapshot(process.out.versions).match() }
            )
        }
    }

    test("homo_sapiens - vcf.gz - integration") {
        tag "integration"
        tag "database_required"

        when {
            params {
                db_host = System.getenv('PGHOST') ?: 'localhost'
                db_port = System.getenv('PGPORT') ?: '5432'
                db_name = System.getenv('PGDATABASE') ?: 'vcf_test'
                db_user = System.getenv('PGUSER') ?: 'postgres'
            }
            process {
                """
                input[0] = [
                    [ id: 'HG002_test', family: 'GIAB_AJ' ],
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/vcf/test.vcf.gz', checkIfExists: true),
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/vcf/test.vcf.gz.tbi', checkIfExists: true)
                ]
                input[1] = params.db_host
                input[2] = params.db_port.toInteger()
                input[3] = params.db_name
                input[4] = params.db_user
                input[5] = 'public'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.report.get(0).get(1).exists() },
                { assert process.out.row_count.get(0).get(1).toInteger() > 0 },
                { assert snapshot(process.out.versions).match() }
            )
        }
    }
}
